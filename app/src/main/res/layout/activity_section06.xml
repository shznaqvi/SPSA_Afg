                    <LinearLayout
                        android:id="@+id/lls6q3a98check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/s6q3a"
