<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="form"
            type="edu.aku.hassannaqvi.spsa_afg.models.Form" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.spsa_afg.ui.sections.Section06Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- s6title  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs6title"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s6title" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- s6mea1  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs6mea1"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_s6mea1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s6mea1"
                            android:text="@string/s6mea1" />

                        <TextView
                            android:id="@+id/q_s6mea1"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s6mea1"
                            android:layout_alignBottom="@id/qtxt_s6mea1"
                            android:text="@string/Q_s6mea1" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s6q1a" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/s6q1a"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/s6q1a"
                            android:inputType="number"
                            app:mask="##.#"
                            app:maxValue="40.0"
                            app:minValue="11.0"
                            app:pattern="^(\\d{2,2}\\.\\d{1,1})$"
                            app:type="range" />

                       <!-- <Spinner
                            android:id="@+id/s6q1ab"
                            style="@style/spinner"
                            android:layout_width="0dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1" />-->

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s6q2a" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/s6q2a"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/s6q2a"
                            android:inputType="number"
                            app:mask="##.#"
                            app:maxValue="18.0"
                            app:minValue="10.0"
                            app:pattern="^(\\d{2,2}\\.\\d{1,1})$"
                            app:type="range" />

                        <!--<Spinner
                            android:id="@+id/s6q2ab"
                            style="@style/spinner"
                            android:layout_width="0dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1" />-->

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s6q3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/s6q3a"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/s6q3"
                            android:inputType="number"
                            android:maxLength="2"
                            app:maxValue="19"
                            app:minValue="6"
                            app:type="range" />

                        <!--<Spinner
                            android:id="@+id/s6q3ab"
                            style="@style/spinner"
                            android:layout_width="0dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1" />-->

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- s6mea2  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs6mea2"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_s6mea2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s6mea2"
                            android:text="@string/s6mea2" />

                        <TextView
                            android:id="@+id/q_s6mea2"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s6mea2"
                            android:layout_alignBottom="@id/qtxt_s6mea2"
                            android:text="@string/Q_s6mea2" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s6q1b" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/s6q1b"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/s6q1b"
                            android:inputType="number"
                            app:mask="##.#"
                            app:maxValue="40.0"
                            app:minValue="11.0"
                            app:pattern="^(\\d{2,2}\\.\\d{1,1})$"
                            app:type="range" />

                        <!-- <Spinner
                             android:id="@+id/s6q1bb"
                             style="@style/spinner"
                             android:layout_width="0dp"
                             android:layout_margin="10dp"
                             android:layout_weight="1" />-->

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s6q2b" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/s6q2b"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/s6q2b"
                            android:inputType="number"
                            app:mask="##.#"
                            app:maxValue="18.0"
                            app:minValue="10.0"
                            app:pattern="^(\\d{2,2}\\.\\d{1,1})$"
                            app:type="range" />

                        <!-- <Spinner
                             android:id="@+id/s6q2bb"
                             style="@style/spinner"
                             android:layout_width="0dp"
                             android:layout_margin="10dp"
                             android:layout_weight="1" />-->

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--EndButton LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/red_overlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/green_overlay"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>