                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/s6title" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- s6mea1  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs6mea1"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_s6mea1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s6mea1"
                            android:text="@string/s6mea1" />

                        <TextView
                            android:id="@+id/q_s6mea1"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s6mea1"
                            android:layout_alignBottom="@id/qtxt_s6mea1"
                            android:text="@string/Q_s6mea1" />
                    </RelativeLayout>

                    <!-- <EditText
                         android:id="@+id/s6mea1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="@string/s6mea1" />-->

                    <Spinner
                        android:id="@+id/s6mea1"
                        style="@style/spinner1"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- s6q1a  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs6q1a"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_s6q1a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s6q1a"
                            android:text="@string/s6q1a" />

                        <TextView
                            android:id="@+id/q_s6q1a"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s6q1a"
                            android:layout_alignBottom="@id/qtxt_s6q1a"
                            android:text="@string/Q_s6q1a" />
                    </RelativeLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/s6q1a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="#.###"
                        android:inputType="number"
                        app:mask="###.#"
                        app:maxValue="120.0"
                        app:minValue="40.0"
                        app:pattern="^(\\d{3,3}\\.\\d{1,1})$"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


