<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.spsa_afg.ui.other.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testing"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red"
            android:elevation="6dp"
            android:gravity="center"
            android:keepScreenOn="true"
            android:padding="4dp"
            android:text="@string/only_for_testing"
            android:textColor="@color/white_overlay"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblAppVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white_overlay"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lblMainMenu"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/mainmenu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/main_menu"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/summary"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/white_overlay"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtSummary"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_gravity="center_horizontal"
                            android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                            android:drawablePadding="24dp"
                            android:gravity="center"
                            android:onClick="toggleSummary"
                            android:padding="20dp"
                            android:text="Records Summary"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:typeface="monospace" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/recordSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/summary"
                        android:minHeight="256dp"
                        android:padding="20dp"
                        android:text="@string/records_summary"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:typeface="monospace"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtinstalldate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:gravity="center"
                        android:shadowColor="#d6d6d6"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textColor="#7f7f7f"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sec01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="01" />

                    <Button
                        android:id="@+id/sec02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="02" />

                    <Button
                        android:id="@+id/sec03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="03" />

                    <Button
                        android:id="@+id/sec04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'

                        android:padding="0dp"
                        android:text="04" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:padding="0dp">

                    <Button
                        android:id="@+id/sec05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:onClick='@{callback::openSpecificActivity}'

                        android:padding="0dp"
                        android:text="05" />

                    <Button
                        android:id="@+id/sec06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'

                        android:padding="0dp"
                        android:text="06" />

                    <Button
                        android:id="@+id/sec07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="07" />

                    <Button
                        android:id="@+id/sec08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="08" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sec09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="09" />

                    <Button
                        android:id="@+id/sec10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="10" />

                    <Button
                        android:id="@+id/sec11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="11" />

                    <Button
                        android:id="@+id/sec12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="0dp"

                        android:text="12" />

                </LinearLayout>

                <Button
                    android:id="@+id/sec13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:onClick='@{callback::openSpecificActivity}'
                    android:padding="0dp"

                    android:text="13" />


                <LinearLayout
                    android:id="@+id/admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/uploadData"
                        android:layout_width="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableStart="@drawable/ic_upload"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:onClick='@{callback::openSpecificActivity}'
                        android:padding="8dp"
                        android:text="@string/btnUpload"
                        android:textColor="@color/colorPrimaryDark" />

                    <Button
                        android:id="@+id/databaseBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableStart="@drawable/database"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:onClick="@{callback::openSpecificActivity}"
                        android:padding="8dp"
                        android:text="@string/database"
                        android:textColor="@color/colorPrimaryDark" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
