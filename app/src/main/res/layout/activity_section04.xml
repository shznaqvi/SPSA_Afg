                        android:id="@+id/s4q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/s4q1a01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/s4q1a01" />

                        <RadioButton
