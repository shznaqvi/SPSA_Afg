                            android:layout_height="wrap_content"
                            android:text="@string/s4q1a02" />

                        <RadioButton
                            android:id="@+id/s4q1b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/s4q1b" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/s4q1bx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/s4q1b"
                            android:inputType="number"
                            android:maxLength="2"
                            android:tag="s4q1b"
                            android:text='@{s4q1b.checked ? s4q1bx.getText().toString() : ""}'
                            android:visibility='@{s4q1b.checked? View.VISIBLE : View.GONE}'
                            app:maxValue="15"
                            app:minValue="1"
                            app:type="range" />

                        <RadioButton
                            android:id="@+id/s4q1c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/s4q1c" />

                        <EditText
                            android:id="@+id/s4q1cx"
